    <div id="calendar"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: [
                    // This is where you can add booking events from your database
                    {
                        title: 'Booking two-person cabin 1',
                        start: '2024-06-01',
                        end: '2024-06-03'
                    },
                    {
                        title: 'Booking two-person cabin 2',
                        start: '2024-06-05',
                        end: '2024-06-07'
                    }
                ]
            });
            calendar.render();
        });
    </script>
